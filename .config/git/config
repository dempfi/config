[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
  s = switch
  st = status --short --branch
  cm = commit
  br = branch
  ch = checkout
  df = diff
  dc = diff --cached
  lg = log --graph --decorate --abbrev-commit --date=relative --pretty='%C(yellow)%h% %Creset %s%Cblue%d%C(white) • %an %ad %Creset'
  lga = log --graph --decorate --abbrev-commit --date=relative --all --pretty='%C(yellow)%h% %Creset %s%Cblue%d%C(white) • %an %ad %Creset'
  ls = ls-files

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
[user]
	name = Ike Ku
	email = mail@dempfi.com
	name = Ike Kurghinyan
[push]
	default = simple
[rerere]
	enabled = true
[gpg]
	program = gpg
[commit]
	gpgsign = false
